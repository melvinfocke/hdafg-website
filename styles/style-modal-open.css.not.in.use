:root {
    --nav-bar: rgba(252, 33, 119, 0.9);
}

hr,
h1,
h2:not(.modal *),
h3,
h4,
p:not(.modal *),
img:not(.logo-big, .modal *),
.event-div,
.welcome-img,
footer {
    filter: blur(6px);
}

header {
    background-color: transparent;
}

nav {
    display: none;
}

@media only screen and (min-height: 585px) and (min-width: 563px) {
    header {
        background-color: var(--nav-bar);
    }

    nav {
        display: flex;
    }
}
